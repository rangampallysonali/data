pipeline {
    agent any
    stages {
        stage('install dependencies') {
    steps {
        bat '''
            python3 -m venv venv
            . venv/bin/activate
            pip install --upgrade pip
            pip install -r requirements.txt
        '''
    }
}

            
       stage('Run The code') {
    steps {
        bat '''
            . venv/bin/activate
            python main.py
        '''
    }
}
      
    }
}
