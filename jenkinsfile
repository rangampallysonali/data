pipeline {
    agent { label 'docker-agent' }

    stages {
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'python:3.14-rc-slim'
                }
            }
            steps {
                bat '''
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Run The Code') {
            steps {
                bat '''
                    python main.py
                '''
            }
        }
    }
}
