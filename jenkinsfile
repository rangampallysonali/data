pipeline {
    agent any
    stages {
        stage('install dependencies') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip3 install --upgrade pipe
                pip3 install -r requirements.txt
                '''
            }
        }
        stage('Run The code') {
            steps {
                sh '''
                . venv/bin/activate
                python3 main.py
                '''
            }
        }
    }
}
